# BitCraft SpacetimeDB Server Configuration
# Port for WebSocket connections and HTTP API
BITCRAFT_PORT=3000
# Admin port for SpacetimeDB management (dev mode only)
BITCRAFT_ADMIN_PORT=3001
# Memory limit for BitCraft server container
BITCRAFT_MEMORY_LIMIT=1G

# Crosstown Node Configuration
# Port for Nostr relay WebSocket connections
CROSSTOWN_NOSTR_PORT=4040
# Port for HTTP API (health and info endpoints)
CROSSTOWN_HTTP_PORT=4041
# Port for Prometheus metrics (dev mode only)
CROSSTOWN_METRICS_PORT=4042
# Memory limit for Crosstown node container
CROSSTOWN_MEMORY_LIMIT=512M

# Logging Configuration
# Log level for SpacetimeDB (debug, info, warn, error)
SPACETIMEDB_LOG_LEVEL=info
# Log level for Crosstown node (debug, info, warn, error)
CROSSTOWN_LOG_LEVEL=info

# Crosstown Build Configuration
# Build mode: 'remote' (git clone) or 'local' (use docker/crosstown/crosstown-src/)
# NOTE: Remote mode is not yet implemented (waiting for Crosstown repository URL)
# Use 'local' mode for now
CROSSTOWN_BUILD_MODE=local
