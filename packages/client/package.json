{
  "name": "@sigil/client",
  "version": "0.1.0",
  "description": "Core client library for Sigil - SpacetimeDB and Nostr integration",
  "license": "Apache-2.0",
  "author": "BitCraft Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitcraftlabs/sigil.git",
    "directory": "packages/client"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:unit": "vitest run --exclude '**/integration.test.ts'",
    "test:integration": "RUN_INTEGRATION_TESTS=true vitest run --include '**/integration.test.ts'",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@clockworklabs/spacetimedb-sdk": "^1.3.3",
    "@noble/hashes": "^1.6.1",
    "@scure/bip39": "^1.6.0",
    "nostr-tools": "^2.23.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "tsup": "latest",
    "typescript": "^5.0.0",
    "vitest": "latest"
  }
}
